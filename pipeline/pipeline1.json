{
	"name": "pipeline1",
	"properties": {
		"activities": [
			{
				"name": "blob to blob",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"modifiedDatetimeStart": {
								"value": "@pipeline().parameters.p_runDate",
								"type": "Expression"
							},
							"modifiedDatetimeEnd": {
								"value": "@pipeline().parameters.p_runDate",
								"type": "Expression"
							},
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "blobsource",
						"type": "DatasetReference",
						"parameters": {
							"container": {
								"value": "@pipeline().parameters.p_inputContainer",
								"type": "Expression"
							},
							"fileName": {
								"value": "@pipeline().parameters.p_fileName",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "blobsource",
						"type": "DatasetReference",
						"parameters": {
							"container": {
								"value": "@pipeline().parameters.p_outputContainer",
								"type": "Expression"
							},
							"fileName": {
								"value": "@pipeline().parameters.p_fileName",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"p_inputContainer": {
				"type": "string",
				"defaultValue": "input"
			},
			"p_outputContainer": {
				"type": "string",
				"defaultValue": "output"
			},
			"p_fileName": {
				"type": "string",
				"defaultValue": "sample_api_data.csv"
			},
			"p_folder": {
				"type": "string",
				"defaultValue": "bronze"
			},
			"p_runDate": {
				"type": "string",
				"defaultValue": "@utcNow()"
			}
		},
		"annotations": []
	}
}